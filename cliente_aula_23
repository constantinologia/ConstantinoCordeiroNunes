require 'socket'

hostname = 'localhost'
port = 2000
threads = [] #Para armazenar as threads que ser√£o criadas
inicio = Time.now

for i in 1..5 do
	t = Thread.start(TCPSocket.new(hostname, port)) do |socket|
		socket.puts('msg')
		puts socket.gets
		socket.close
	end

	threads << t #adiciona a thread ao array
end

threads.each do |t|
	t.join
end

fim = Time.now
puts "#{fim - inicio} s"
